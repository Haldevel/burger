<div class="header">
    <h1>Eat-Da-Burger!</h1>
    <img src="../public/assets/img/burger_s.jpg" />
</div>


<div class="flex-container">
    <div class="not-dev">

        {{#each burgers}}
        {{#unless devoured}}
        <p>{{this.id}}. {{this.burger_name}}
            <button type="button" class="btn btn-success btn-sm change-devoured" data-id="{{this.id}}"
                data-devoured="{{devoured}}">
                Devour it!
            </button>
        </p>
        {{/unless}}
        {{/each}}

    </div>
    <div class="dev">

        {{#each burgers}}
        {{#if devoured}}
        <p>{{this.id}}. {{this.burger_name}}</p>
        {{/if}}
        {{/each}}

    </div>
</div>


<div class="add-form">
    <form action="/" method="POST">
        <div class="input-group-prepend">
            <span class="input-group-text">Add a Burger!</span>
        </div>
        <textarea type="text" class="form-control p-3" aria-label="With textarea" name="new-burger" id="newb"></textarea>

        <button id="subm" type="submit" class="btn btn-warning mt-3">Submit</button>
    </form>
</div>