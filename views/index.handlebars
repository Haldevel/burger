<div class="header">
    <h1>Eat-Da-Burger!</h1>
    <img src="../public/assets/img/burger_s.jpg" />
</div>


<div class="flex-container">
    <div class="not-dev">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                <p>{{this.id}} {{this.burger_name}} {{this.devoured}} </p>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="dev">
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                <p>{{this.id}} {{this.burger_name}}</p>
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>


<div class="add-form">
    <form action="/" method="POST">
        <textarea type="text" name="new-burger" id="newb"></textarea>

        <button type="submit">Submit</button>
    </form>
</div>