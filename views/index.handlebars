<div class="header">
    <h1>Eat-Da-Burger!</h1>
    <img src="../public/assets/img/burger_s.jpg" />
</div>


<div class="flex-container">
    <div class="not-dev">

        {{#each burgers}}
        {{#unless devoured}}
        <p>{{this.id}}. {{this.burger_name}} 
            <button type="button" class="btn btn-success btn-sm change-devoured" data-id="{{this.id}}" data-devoured="{{devoured}}">
                Devour it!
            </button>
        </p>
        {{/unless}}
        {{/each}}

    </div>
    <div class="dev">

        {{#each burgers}}
        {{#if devoured}}
        <p>{{this.id}}. {{this.burger_name}}</p>
        {{/if}}
        {{/each}}

    </div>
</div>


<div class="add-form">
    <form action="/" method="POST">
        <textarea type="text" name="new-burger" id="newb"></textarea>

        <button type="submit">Submit</button>
    </form>
</div>